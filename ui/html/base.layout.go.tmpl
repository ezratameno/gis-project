{{define "base"}}
<!doctype html>
<html lang='en'>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-sacle=1.0">
        <title>{{template "title" .}} - Snipperbox</title>
        <!-- Link to the CSS stylesheet and favicon -->
        <!-- Also link to some fonts hosted by Google -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    </head>
    <style>
        div.flash {
        color: #FFFFFF;
        font-weight: bold;
        background-color: #34495E;
        padding: 18px;
        margin-bottom: 36px;
        text-align: center;
        }
    </style>
    <body >
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/"> Gis-project </a>
            {{if  not .IsAuthenticated}}
                <a class="navbar-brand" href="/user/login"> Login </a>
                <a class="nav-link" href="/user/login"> Login </a>
            {{end}}
           
            {{if .IsAuthenticated}}
                <a class="navbar-brand"> Welcome {{.Email}} </a>
                <a class="navbar-brand" href="/user/logout"> Logout </a>
            {{end}}
        </nav>

        <main>
            {{with .Flash}}
                <div id="flash" class="flash" onchange="flashChanged()">{{.}}</div>
            {{end}}
            {{template "main" .}}
        </main>
        {{template "footer" .}}
    </body>
       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
       <script>
       /* remove the flash alert after 5 sec */
       setTimeout(function(){
           document.getElementById("flash").remove();
        }, 5000);

       </script>
</html>
{{end}}